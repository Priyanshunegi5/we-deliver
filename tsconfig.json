{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es6"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "jsx": "react-native",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
